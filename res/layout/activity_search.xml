<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.imrokraft.arrayadapterexample.MainActivity" >

    <TextView
        android:id="@+id/time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:text="Scanned Devices"
        android:textColor="#00f"
        android:textSize="18sp" />

    <ListView
        android:id="@+id/activity_main_paired_listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/time"
        android:layout_alignLeft="@+id/txtview_btaddress"
        android:layout_below="@+id/txtview_btaddress" >

    </ListView>

    <ListView
        android:id="@+id/activity_main_new_listView"
        android:layout_width="match_parent"
       
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/time"
        android:layout_below="@+id/time" >

    </ListView>

    <TextView
        android:id="@+id/txtview_btaddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/username"
        android:text="Paired Devices"
        android:textColor="#00f"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Choose Device."
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#F00"
        android:textSize="21sp" />

</RelativeLayout>